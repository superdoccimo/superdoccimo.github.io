/* 全体の基本スタイル */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f8f8f8;
  }
  
  /* ナビゲーションバー */
  nav {
    background-color: #333;
  }
  nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
  }
  nav ul li {
    margin: 0;
  }
  nav ul li a {
    color: white;
    padding: 15px 20px;
    display: block;
    text-decoration: none;
  }
  nav ul li a:hover {
    background-color: #555;
  }
  
  /* コンテンツエリア */
  .content {
    margin: 20px;
    padding: 20px;
    background-color: white;
    border-radius: 4px;
  }
  
  /* フッター */
footer {
  background-color: #333;
  color: white;
  text-align: center;
  padding: 10px;
}

/* Hero section */
.hero {
  padding: 2rem;
  background-color: #f0f0f0;
  text-align: center;
}

/* Project list */
.project-list {
  list-style: none;
  padding: 0;
  display: grid;
  gap: 1rem;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
}

/* Individual project card */
.project-card {
  border: 1px solid #ddd;
  border-radius: 4px;
  background-color: #fff;
  padding: 1rem;
}
.project-card img {
  max-width: 100%;
  height: auto;
  border-radius: 4px 4px 0 0;
  margin-bottom: 0.5rem;
}
  
